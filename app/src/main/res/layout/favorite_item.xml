<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_323sdp"
        android:layout_height="@dimen/_89sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/ItemView_"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_"
                android:layout_width="@dimen/_81sdp"
                android:layout_height="@dimen/_79sdp"
                android:layout_margin="@dimen/_6sdp" />


            <TextView
                android:id="@+id/txt_Masajid"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@id/img_"
                android:fontFamily="@font/segoeuiregular"
                android:text="Masjid-e-Rehman"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_address_"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_Masajid"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toEndOf="@id/img_"
                android:fontFamily="@font/segoeuiregular"
                android:text="231, Liverpool UK"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/TextMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_19sdp"
                android:text="121212"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextMiles"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_12sdp"
                android:text="miles Away"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/pic_favorite"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@+id/TextMiles"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/ic_favorite" />

            <TextView
                android:id="@+id/txt_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pic_favorite"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:text=""
                android:textColor="#00587A"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>