<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/Layout_Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/message_strokes"
        android:gravity="center"
        >


    <TextView
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/QuestionByUser_Left"
        android:text="hello asalam alikum"
        android:gravity="end"
        android:fontFamily="@font/robotoregular"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/LayoutAnswer_"
        android:layout_margin="@dimen/_10sdp"
        android:layout_below="@id/Layout_Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/message_stroke_left">

    <TextView
        android:id="@+id/AnswerByImam_Right"
        android:layout_margin="@dimen/_5sdp"
        android:text="hello"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/robotoregular"
        android:textAllCaps="false"
        android:textColor="#000000"
        />



    </RelativeLayout>









</RelativeLayout>