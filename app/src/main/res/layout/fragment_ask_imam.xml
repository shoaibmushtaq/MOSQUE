    <RelativeLayout
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/Layout_noMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/msg_pic"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_80sdp"

            android:background="@drawable/ic_msg_send"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_80sdp"

            />

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask Imam a question"
            android:layout_below="@id/msg_pic"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_marginTop="@dimen/_5sdp"/>
    </RelativeLayout>



    <android.support.v7.widget.RecyclerView

        android:id="@+id/RV_Questions_Answers"
        android:layout_above="@+id/BL"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>







    <RelativeLayout
        android:id="@+id/BL"
        android:layout_alignParentBottom="true"
        android:background="#00587A"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp">

        <EditText
            android:id="@+id/msgEDT"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:cursorVisible="true"
            android:hint="Enter Your Question Here"
            android:paddingHorizontal="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_12sdp"

            />

        <Button
            android:id="@+id/BTN_SEND"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="#0396AB"
            android:text="SEND"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            />



    </RelativeLayout>



