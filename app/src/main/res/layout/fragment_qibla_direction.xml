<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_qibla">

    <ImageView
        android:id="@+id/compassImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/round" />

    <ImageView
        android:id="@+id/qiblaImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/compass"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/BottomLayout_Date_"
        android:layout_marginBottom="@dimen/_50sdp">
        <TextView
            android:id="@+id/txt_qibla_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_qibla_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 jumadal Ula 1440 AH"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/txt_qibla_day"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/txt_qibla_date"
            android:layout_below="@+id/txt_qibla_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#A7BEC7"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>